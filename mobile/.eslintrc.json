{
  "extends": ["expo", "@react-native"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "react-hooks/exhaustive-deps": "warn",
    "no-console": "warn"
  },
  "ignorePatterns": ["node_modules/", ".expo/", "web-build/", "dist/"]
}
