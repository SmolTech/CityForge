# Backend Environment Variables
# Copy this file to .env and configure for your environment

# Database Configuration
# Individual connection parameters:
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_change_me
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=community_db

# Or use DATABASE_URL directly (overrides individual params above):
# DATABASE_URL=postgresql://user:password@host:port/dbname

# JWT Configuration
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_very_secret_key_change_in_production_use_long_random_string

# Flask Configuration
# Secret key for session management
SECRET_KEY=your_flask_secret_key_change_in_production

# Upload Configuration
# Directory for user-uploaded files (images, etc.)
UPLOAD_FOLDER=uploads

# Flask Environment (development or production)
FLASK_ENV=development

# OpenSearch Configuration (optional, for search functionality)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200

# SQLAlchemy Database Pool Configuration (optional)
# See CLAUDE.md for details on connection pooling
# SQLALCHEMY_POOL_SIZE=10
# SQLALCHEMY_MAX_OVERFLOW=20
# SQLALCHEMY_POOL_RECYCLE=3600
# SQLALCHEMY_POOL_PRE_PING=true
# SQLALCHEMY_POOL_TIMEOUT=30
