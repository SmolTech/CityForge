# Mautic API Credentials Secret
# This is an example file. Copy to mautic-api-secret.yaml and update with actual credentials.
# DO NOT commit the actual secret file to version control!
#
# To create the secret:
# 1. Copy this file: cp mautic-api-secret.yaml.example mautic-api-secret.yaml
# 2. Update username and password with base64 encoded values
# 3. Apply: kubectl apply -f mautic-api-secret.yaml
#
# To encode credentials:
# echo -n 'your-username' | base64
# echo -n 'your-password' | base64

apiVersion: v1
kind: Secret
metadata:
  name: mautic-api-credentials
  namespace: community
type: Opaque
data:
  # Base64 encoded Mautic API username
  username: eW91ci11c2VybmFtZQ==  # Replace with: echo -n 'your-username' | base64
  # Base64 encoded Mautic API password
  password: eW91ci1wYXNzd29yZA==  # Replace with: echo -n 'your-password' | base64
