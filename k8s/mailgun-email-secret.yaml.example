# Kubernetes Secret for Mailgun Email Configuration
# This file is an example - copy to mailgun-email-secret.yaml and configure with your values
# DO NOT commit the actual secret file to git!
#
# SETUP INSTRUCTIONS:
# 1. Sign up for Mailgun at https://www.mailgun.com/
# 2. Verify your sending domain in the Mailgun dashboard
#    - Go to: https://app.mailgun.com/domains
#    - Add your domain and configure DNS records (SPF, DKIM, CNAME)
# 3. Get your API Key:
#    - Go to: https://app.mailgun.com/settings/api_security
#    - Copy your "Private API key" (starts with "key-")
# 4. Note your region:
#    - US region: api.mailgun.net (most common)
#    - EU region: api.eu.mailgun.net (for GDPR compliance)
# 5. Copy this file: cp mailgun-email-secret.yaml.example mailgun-email-secret.yaml
# 6. Fill in your actual values below
# 7. Apply: kubectl apply -f mailgun-email-secret.yaml -n cityforge
#
# To create via kubectl command instead:
#   kubectl create secret generic mailgun-email \
#     --from-literal=MAILGUN_API_KEY="your_api_key" \
#     --from-literal=MAILGUN_DOMAIN="yourdomain.com" \
#     --from-literal=MAILGUN_REGION="us" \
#     --from-literal=EMAIL_FROM="noreply@yourdomain.com" \
#     --from-literal=EMAIL_FROM_NAME="YourSiteName" \
#     -n cityforge

apiVersion: v1
kind: Secret
metadata:
  name: mailgun-email
  namespace: cityforge
type: Opaque
stringData:
  # Mailgun API Key (Private API key from dashboard)
  # Get from: https://app.mailgun.com/settings/api_security
  # Starts with "key-" followed by 32 character hexadecimal string
  MAILGUN_API_KEY: "your_mailgun_api_key_here"

  # Mailgun Verified Domain
  # Your verified sending domain from Mailgun dashboard
  # Example: mg.example.com or example.com
  MAILGUN_DOMAIN: "yourdomain.com"

  # Mailgun Region
  # "us" for United States (api.mailgun.net) - default
  # "eu" for Europe (api.eu.mailgun.net) - for GDPR compliance
  MAILGUN_REGION: "us"

  # Email address to send from
  # Must be from your verified domain
  # Example: noreply@mg.example.com or noreply@example.com
  EMAIL_FROM: "noreply@yourdomain.com"

  # Display name for sender (appears as "From: YourSiteName <noreply@yourdomain.com>")
  # Example: Worcester Community
  EMAIL_FROM_NAME: "YourSiteName"
