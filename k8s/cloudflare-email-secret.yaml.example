# Kubernetes Secret for Cloudflare Email Configuration
# This file is an example - copy to cloudflare-email-secret.yaml and configure with your values
# DO NOT commit the actual secret file to git!
#
# SETUP INSTRUCTIONS:
# 1. Sign up for Cloudflare and add your domain: https://dash.cloudflare.com/
# 2. Set up Email Routing: Dashboard → Email → Email Routing
# 3. Create API Token: Profile → API Tokens → Create Token
#    - Use "Email Routing Send" template or custom with Email Routing permissions
# 4. Get Account ID: Dashboard home → right sidebar "Account ID"
# 5. Copy this file: cp cloudflare-email-secret.yaml.example cloudflare-email-secret.yaml
# 6. Fill in your actual values below
# 7. Apply: kubectl apply -f cloudflare-email-secret.yaml -n cityforge
#
# To create via kubectl command instead:
#   kubectl create secret generic cloudflare-email \
#     --from-literal=CLOUDFLARE_EMAIL_API_TOKEN="your_token" \
#     --from-literal=CLOUDFLARE_ACCOUNT_ID="your_account_id" \
#     --from-literal=EMAIL_FROM="noreply@yourdomain.com" \
#     --from-literal=EMAIL_FROM_NAME="YourSiteName" \
#     -n cityforge

apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-email
  namespace: cityforge
type: Opaque
stringData:
  # Cloudflare API Token for Email Routing
  # Generate at: https://dash.cloudflare.com/profile/api-tokens
  # Required permissions: Email Routing Send
  # Example: aBc123XyZ789_ThisIsAnExampleToken_NotReal456
  CLOUDFLARE_EMAIL_API_TOKEN: "your_cloudflare_api_token_here"

  # Cloudflare Account ID
  # Find at: https://dash.cloudflare.com/ (right sidebar)
  # Example: 1234567890abcdef1234567890abcdef
  CLOUDFLARE_ACCOUNT_ID: "your_cloudflare_account_id_here"

  # Email address to send from
  # Must be configured in Cloudflare Email Routing
  # Example: noreply@example.com
  EMAIL_FROM: "noreply@yourdomain.com"

  # Display name for sender (appears as "From: YourSiteName <noreply@yourdomain.com>")
  # Example: Worcester Community
  EMAIL_FROM_NAME: "YourSiteName"
